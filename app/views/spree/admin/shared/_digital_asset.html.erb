<div class="text-center asset-area">
  <div class="digital-assets-image">
    <%= image_tag(digital_asset.attachment.url(:small), class: 'img-thumbnail attachment digital_asset_attachment' ,
      data: { id: digital_asset.id, name: digital_asset.name }, onerror: 'imgError(this);')  %>
  </div>
  <p>
    <%= digital_asset.name %>
  </p>


  <ul class="dropdown-menu">
    <li>
      <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe(), spree.admin_digital_asset_path(digital_asset), method: :delete, remote: true, class: 'delete_digital_asset_button' %>
    </li>
    <li role="separator" class="divider"></li>
    <li>
      <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe(), spree.edit_admin_digital_asset_path(digital_asset) %>
    </li>
    <li role="separator" class="divider"></li>
    <li><%= link_to '<i class="glyphicon glyphicon-download"></i>'.html_safe(), digital_asset.attachment.url(:original, false), target: '_blank' %></li>
  </ul>
</div>
