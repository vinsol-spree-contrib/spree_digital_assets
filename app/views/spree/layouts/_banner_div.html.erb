<% banners = (request.variant.include?(:phone)) ? Spree::Banner.mobile_active_banner : Spree::Banner.active %>
<% if banners.present? %>
  <div class="banners-block banner-left banner-list-flex">
    <% banners.each do |banner| %>
      <a href="<%= banner.link %>" class="top-banner-links banner-list-flex-item">
        <% if banner.attachment.present? %>
          <%= image_tag banner.attachment, class: 'img-responsive' %>
        <% else %>
          <%= image_tag banner.images.first.attachment(:banner), class: 'img-responsive' %>
        <% end %>
      </a>
    <% end %>
  </div>
<% end %>
